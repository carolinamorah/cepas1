<p id="notice"><%= notice %></p>

<h1 class= "title text-center"><strong>BDD Wines</strong></h1>

<table class="table">
  <thead class="table table-success">
    <tr>
      <th>Nombre</th>
      <th>Cepas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.strain_names_and_percentages %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

